<div id="landing-page" class="m-0 vh-100 vw-100">

    <div class="d-flex flex-column justify-content-center align-items-center h-100">
        <div class="w-50 d-flex flex-column justify-content-center align-items-center bg-lavender-transparent p-4">
            <br>
            <h1 class="text-center">First Online Marketplace for Claims</h1>
            <h3 class="text-center p-5">The world's best place for buyers and sellers of credit to connect</h3>
            <div class="d-flex justify-content-between w-75">
                <a class="btn btn-primary btn-lg" href="/auth/login/?role=seller" role="button">I want to sell</a>
                <a class="btn btn-primary bg-plantation border-0 btn-lg" href="/auth/login/?role=buyer" role="button">I want to buy</a>
            </div>
        </div>
        <div class="row m-5 ">
            {{#if errorMessage}} 
                <div class="alert alert-danger text-center" role="alert">
                    {{errorMessage}}
                </div>
            {{/if}}
        </div>
    </div>


</div>










